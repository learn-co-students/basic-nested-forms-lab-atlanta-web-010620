<%# <%=  %>
<%= form_for @recipe do|f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <p>Ingredients:</p>
    <%= f.fields_for :ingredients do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br>
        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
        <br>
    <% end  %>
    <br>
    <%= f.submit %>

<% end %>